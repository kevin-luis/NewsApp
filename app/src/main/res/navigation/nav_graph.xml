<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.kevinluis.newsapp.view.fragment.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_home_to_detail"
            app:destination="@id/navigation_detail_news" />
    </fragment>

    <fragment
        android:id="@+id/navigation_bookmark"
        android:name="com.kevinluis.newsapp.view.fragment.BookmarkFragment"
        android:label="Bookmarked"
        tools:layout="@layout/fragment_bookmark">

        <action
            android:id="@+id/action_favorite_to_detail"
            app:destination="@id/navigation_detail_news" />
    </fragment>

    <fragment
        android:id="@+id/navigation_detail_news"
        android:name="com.kevinluis.newsapp.view.fragment.DetailNewsFragment"
        android:label="Detail Berita"
        tools:layout="@layout/fragment_detail_news">

        <argument
            android:name="news_title"
            app:argType="string" />
        <argument
            android:name="news_url"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="news_image_url"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="news_source"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="news_author"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="news_published_at"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="news_description"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="news_content"
            app:argType="string"
            app:nullable="true" />

    </fragment>

</navigation>
