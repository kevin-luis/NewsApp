<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.BookmarkFragment">

    <!-- Judul Halaman -->
    <TextView
        android:id="@+id/tv_title_bookmark"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="Daftar Bookmark"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Daftar Berita yang di-bookmark -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_bookmark_news"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title_bookmark"
        tools:listitem="@layout/item_news" />

    <!-- Tampilan ketika tidak ada bookmark -->
    <TextView
        android:id="@+id/tv_no_bookmarks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Belum ada berita yang di-bookmark"
        android:textSize="16sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title_bookmark"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>
